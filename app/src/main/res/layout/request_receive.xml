<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    tools:ignore="HardcodedText">

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/image_received_request"
        android:layout_width="60dip"
        android:layout_height="60dip"
        android:layout_margin="10dp"
        android:src="@drawable/ic_account_circle" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dip"
        android:orientation="vertical">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/name_received_request"
                style="@style/TextAppearance.AppCompat.Medium"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Varma"
                android:textColor="#000"
                android:textSize="20sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/text_response_receive_request"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Request Accepted"
            android:textSize="16sp"
            android:visibility="gone" />


        <LinearLayout
            android:id="@+id/responseLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="horizontal"
            android:visibility="visible">


            <Button
                android:id="@+id/accept_received_request"
                android:layout_width="wrap_content"
                android:layout_height="40dip"
                android:layout_marginEnd="10dip"
                android:backgroundTint="@color/colorAccent"
                android:text="Accept"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                tools:ignore="ButtonStyle,HardcodedText" />

            <Button
                android:id="@+id/reject_received_request"
                android:layout_width="wrap_content"
                android:layout_height="40dip"
                android:layout_marginEnd="10dip"
                android:text="Reject"
                tools:ignore="ButtonStyle" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>