<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:ignore="HardcodedText">


    <TextView
        android:id="@+id/date_contactInfo_item"
        style="@style/TextAppearance.AppCompat.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:paddingEnd="@dimen/default_gap"
        android:paddingStart="@dimen/default_gap"
        android:paddingTop="@dimen/default_gap"
        android:text="Today" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingEnd="@dimen/default_gap"
        android:paddingStart="@dimen/default_gap"
        android:paddingTop="@dimen/default_gap">

        <ImageView
            android:id="@+id/profileIcon_contactInfo_item"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="@dimen/default_gap"
            android:layout_marginTop="20dp"
            android:background="@drawable/circle"
            android:contentDescription="profileIcon"
            android:fontFamily="sans-serif-smallcaps"
            android:gravity="center" />


        <LinearLayout
            android:id="@+id/linearLayout_contactInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/profileIcon_contactInfo_item"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:id="@+id/callerNumber_contactInfo_item"
                style="@style/TextAppearance.AppCompat.Medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingEnd="8dp"
                android:paddingStart="8dp"
                android:paddingTop="13dp"
                android:text="9999999999"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/callDuration_contactInfo_item"
                style="@style/TextAppearance.AppCompat.Small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/default_gap"
                android:paddingBottom="@dimen/default_gap"
                android:paddingEnd="@dimen/default_gap"
                android:paddingStart="@dimen/default_gap"
                android:text=" 15 min" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/time_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:gravity="end"
            android:orientation="vertical">

            <TextView
                android:id="@+id/time_contactInfo_item"
                style="@style/TextAppearance.AppCompat.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:padding="5dp"
                android:text="09:38 AM" />


        </LinearLayout>


    </RelativeLayout>
</LinearLayout>