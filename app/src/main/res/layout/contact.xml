<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/contact"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="2dp">

    <FrameLayout
        android:id="@+id/frameProfilePic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/profileIcon_contact_fragment2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="@dimen/default_gap"
            android:layout_marginTop="8dp"
            android:background="@drawable/circle"
            android:fontFamily="sans-serif-smallcaps"
            android:gravity="center"
            android:textColor="@color/colorWhite"
            android:textSize="24sp"
            android:textStyle="bold"
            android:visibility="visible" />

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/profileIcon_friend_fragment2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="@dimen/default_gap"
            android:layout_marginTop="8dp"
            android:visibility="gone" />
    </FrameLayout>


    <LinearLayout
        android:id="@+id/linearLayout_contact_fragment2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/frameProfilePic"
        android:orientation="vertical">

        <TextView
            android:id="@+id/contactName_contact"
            style="?android:textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="8dip"
            android:paddingStart="8dip"
            android:paddingTop="10dip"
            android:text="Contact Name"
            android:textColor="#000000"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/contactNumber_contact"
            style="?android:textAppearanceSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/default_gap"
            android:paddingBottom="@dimen/default_gap"
            android:paddingEnd="@dimen/default_gap"
            android:paddingStart="@dimen/default_gap"
            android:text="9999999999"
            tools:ignore="HardcodedText" />
    </LinearLayout>

</RelativeLayout>