<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.varma.contacts">

    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.READ_CALL_LOG" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.VIBRATE" />


    <application
        android:allowBackup="true"
        android:fullBackupContent="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".StartActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".HomeActivity" />
        <activity
            android:name=".LoginActivity"
            android:label="Login"
            android:parentActivityName=".HomeActivity"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name=".RegisterActivity"
            android:noHistory="true"
            android:parentActivityName=".LoginActivity" />
        <activity
            android:name=".UserProfileActivity"
            android:label="User Profile"
            android:parentActivityName=".HomeActivity" />
        <activity
            android:name=".ContactInfoActivity"
            android:parentActivityName=".HomeActivity" />
        <activity android:name=".TestActivty" />
        <activity
            android:name=".ProfileEditActivity"
            android:parentActivityName=".UserProfileActivity" />
        <activity
            android:name=".DialerPadActivity"
            android:windowSoftInputMode="stateAlwaysHidden" />

        <service android:name=".service.MyFirebaseInstanceIDService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>
        <service
            android:name=".service.MyFirebaseMessagingService"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <activity
            android:name=".SearchActivity"
            android:parentActivityName=".HomeActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Transparent"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".RequestsActivity"
            android:label="Requests"
            android:parentActivityName=".HomeActivity" />
        <activity
            android:name=".FriendProfileActivity"
            android:label="Profile"
            android:parentActivityName=".HomeActivity" />

        <service
            android:name=".service.SyncDataService"
            android:exported="false" />
        <service
            android:name=".service.UpdateProfileDataService"
            android:exported="false" />
        <service
            android:name=".service.SaveProfileEditDataJobService"
            android:permission="android.permission.BIND_JOB_SERVICE" />
    </application>

</manifest>